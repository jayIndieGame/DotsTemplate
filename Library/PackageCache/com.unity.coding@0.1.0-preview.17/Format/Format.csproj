    <EmbeddedResource Remove="Uncrustify&#x126;\**" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="editorconfig" Version="0.12.1" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Utils\Utils.csproj" />
  </ItemGroup>

</Project>
